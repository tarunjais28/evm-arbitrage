    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "event-listener",
            "cargo": {
                "args": [
                    "build",
                    "--bin=event-listener",
                    "--package=event-listener"
                ],
                "filter": {
                    "name": "event-listener",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "mem-pool-listener",
            "program": "${workspaceFolder}/target/debug/mem-pool-listener",
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceMap": {
                "/rustc/${env:RUSTC_VERSION}": "${env:USERPROFILE}/.rustup/toolchains/stable-x86_64-apple-darwin/lib/rustlib/src/rust/library"
            },
            "preLaunchTask": "cargo build --bin mem-pool-listener"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "solver",
            "program": "${workspaceFolder}/target/debug/solver",
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceMap": {
                "/rustc/${env:RUSTC_VERSION}": "${env:USERPROFILE}/.rustup/toolchains/stable-x86_64-apple-darwin/lib/rustlib/src/rust/library"
            },
            "preLaunchTask": "cargo build --bin solver"
        }
    ]
}